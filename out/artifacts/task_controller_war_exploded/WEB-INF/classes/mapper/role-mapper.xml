<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.task.repository.RoleDao">

<!--  关联用户与角色  -->
    <insert id="addRole2User">
        insert into task_management_system.user_role(user_id, role_id) VALUES (#{userId},#{roleId})
    </insert>
<!--  添加角色  -->
    <insert id="save">
        insert into  task_management_system.role
        values (#{id},#{roleName},#{roleDesc});
    </insert>
</mapper>